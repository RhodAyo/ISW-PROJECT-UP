@*@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>*@
@using UP.Models;
@*@model IEnumerable<UsersRole>*@
@model IEnumerable<UP.Models.UsersRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>List of Users</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-controller="User" asp-action="Edit" asp-route-id="@user.UserId" class=" btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>&nbsp;
                    <a asp-controller="User" asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i>Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>